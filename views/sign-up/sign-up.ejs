<!DOCTYPE html>
<html lang="en-GB">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, inital-scale=1.0">
  <link href="/sign-up.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/af288e161d.js" crossorigin="anonymous"></script>
  <script src="../hamburger.js" defer></script>
  <script src="form.js" defer></script>
  <title>Signup</title>
</head>
<body>
  <header>
    <div class="header-wrapper">
      <img class="un-logo" src="../images/un-logo.png" alt="United Nations logo">
      <a class="hamburger-icon"> <i class="fa-solid fa-bars"></i> </a>
    </div>
    <nav>
      <ul class="nav-bar">
        <li class="nav-element"><a href="/"> Home </a></li>
        <li class="nav-element active-nav"> <a class="active-page" href="sign-up"> Sign Up </a></li>
        <li class="nav-element"> <a href="teams"> Team </a></li>
        <li class="dropdown">
          <button class="nav-element dropdown-btn"> Goals </button>
          <ul class="dropdown-content">
            <% if (locals.goals) { %>
              <% locals.goals.forEach((goal, index) => { %>
                <li> <a href="goals/<%= index+1 %>"<"> <%= goal.title %> </a> </li>  
              <% }) %>
            <% } %>
          </ul>
        </li>
      </ul>
    </nav>
  </header>
    <main class="sign-upMain">
      <div id="wrapper">
      <h3>Sign up for our newsletter</h3>
      <div class="formDiv">
        <p>required information is marked with an asterisk (*)</p>
        <form action="" method="post" id="form">
          <fieldset>
            <legend>Sign up: </legend>

            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" placeholder="Enter here" required>
            
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" placeholder="Enter here" required>

            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" placeholder="abc@domain.com" required>

            <label for="comments">Additional Comments:</label>
            <textarea name="comments" id="comments" placeholder="Enter any additional comments..."></textarea>

                    <button id="submit" type="submit">Confirm</button>
                </fieldset>
            </form>
            <div id="entryConfirmation"></div>
        </div>
        </div>
    </main>
    <footer>
      <div class="footer-text">
        <% locals.footer.lines.forEach(line => { %>
         <p> <%- line %> </p>
        <% }) %>
      </div>
      <div class="social-links">
        <h2>Follow us:</h2>
        <a href="https://facebook.com"><i class="fa-brands fa-facebook"></i></a>
        <a href="https://twitter.com"><i class="fa-brands fa-twitter"></i></a>
        <a href="https://youtube.com"><i class="fa-brands fa-youtube"></i></a>
        <a href="https://instagram.com"><i class="fa-brands fa-instagram"></i></a>
      </div>
    </footer>
</body>
</html>